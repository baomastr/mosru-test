.btn-switch
  /*font-size: 6em;*/
  width: 54px;
  height: 30px;
  margin: auto;

  position: relative;
  display: inline-block;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  &__radio
    display: none;

  &__label
    display: inline-block;
    padding: .75em .5em .75em .75em;
    vertical-align: top;
    font-size: 1em;
    font-weight: 700;
    line-height: 1.5;
    color: #5b50c6;
    cursor: pointer;
    transition: color .2s ease-in-out;

    & + &
      padding-right: .75em;
      padding-left: 0;

  &__txt
    position: relative;
    z-index: 2;
    display: inline-block;
    min-width: 1.5em;
    opacity: 1;
    pointer-events: none;
    transition: opacity .2s ease-in-out;
    cursor: pointer

    font-weight: 200;
    position: absolute;
    top: 3px;


.btn-switch__label:before {
  content: "";
  position: absolute;
  z-index: -1;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #fff;
  border-radius: 1.5em;
  border: solid 1px #b0b7be;
  box-shadow: inset 0 .0715em .3572em rgba(43,43,43,.05);
  transition: background .2s ease-in-out;

  //height: 40px;
  //width: 70px;
}
.btn-switch__radio--male:checked ~ .btn-switch__label:before {
  background: #fff;
}
.btn-switch__label--male .btn-switch__txt {
  left: -100px;
}
.btn-switch__label--female .btn-switch__txt {
  right: -110px
}
.btn-switch__label--female:after {
  content: "";
  position: absolute;
  z-index: 2;
  //top: .5em;
  //bottom: .5em;
  //left: .5em;
  //width: 2em;
  top: 3px;
  /* bottom: .5em; */
  left: 3px;
  //width: 1em;
  width: 24px;
  height: 24px;
  background: #5b50c6;
  border-radius: 1em;
  pointer-events: none;
  box-shadow: 0 .1429em .2143em rgba(43,43,43,.2), 0 .3572em .3572em rgba(43,43,43,.1);
  transition: left .2s ease-in-out, background .2s ease-in-out;
}
.btn-switch__radio--male:checked ~ .btn-switch__label--female:after {
  //left: calc(100% - 2.5em);
  left: calc(100% - 27px);
  background: #5b50c6;
}
.btn-switch__radio--female:checked ~ .btn-switch__label--male:before,
.btn-switch__radio--male:checked ~ .btn-switch__label--female:before {
  z-index: 1;
}

.btn-switch__radio--male:checked ~ .btn-switch__label--male {
  color: #000000;
}

.btn-switch__radio--female:checked ~ .btn-switch__label--female {
  color: #000000;
}



.select-hidden {
  display: none;
  visibility: hidden;
  padding-right: 10px;
}

.select {
  cursor: pointer;
  display: inline-block;
  position: relative;
  //font-size: 16px;
  //color: #fff;
  //width: 220px;
  //height: 40px;
}

.select-styled {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  //background-color: #c0392b;
  padding: 20px;
  -moz-transition: all 0.2s ease-in;
  -o-transition: all 0.2s ease-in;
  -webkit-transition: all 0.2s ease-in;
  transition: all 0.2s ease-in;
  color: #808890
}

.select-styled:after {
  content: "";
  width: 0;
  height: 0;
  border: 7px solid transparent;
  border-color: #808890 transparent transparent transparent;
  border-radius: 4px;
  //border-color: #808890;
  position: absolute;
  top: 24px;
  right: 10px;
}


.select-styled:active:after, .select-styled.active:after {
  top: 17px;
  border-color: transparent transparent #636f7b transparent;
}

.select-options {
  display: none;
  position: absolute;
  top: 100%;
  right: 0;
  left: 0;
  z-index: 999;
  margin: 0;
  padding: 0;
  list-style: none;
  background-color: #fff;
  border: solid 1.2px #b0b7be;
  border-top: 0
}
.select-options li {
  cursor: pointer
  color: #808890
  margin: 0;
  padding: 12px 0;
  text-indent: 15px;
  border-top: 1px solid #b0b7be;
  -moz-transition: all 0.15s ease-in;
  -o-transition: all 0.15s ease-in;
  -webkit-transition: all 0.15s ease-in;
  transition: all 0.15s ease-in;
}
.select-options li:hover {
  color: #171b20
}
.select-options li[rel="hide"] {
  display: none;
}


